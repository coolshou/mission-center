using Gtk 4.0;

template $DiskDetails: Box {
  margin-top: 65;
  margin-bottom: 10;
  orientation: vertical;
  spacing: 25;

  Grid {
    row-spacing: 5;
    column-spacing: 0;

    styles [
      "layout-grid"
    ]

    Picture legend_read {
      layout {
        column: '0';
        row: '0';
      }

      can-shrink: false;
      content-fit: scale_down;
    }

    Box {
      layout {
        column: '1';
        row: '0';
      }

      orientation: vertical;
      spacing: 3;
      width-request: 100;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Read speed");
      }

      Label read_speed {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }

    Picture legend_write {
      layout {
        column: '2';
        row: '0';
      }

      can-shrink: false;
      content-fit: scale_down;
    }

    Box {
      layout {
        column: '3';
        row: '0';
      }

      orientation: vertical;
      spacing: 3;
      width-request: 100;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Write speed");
      }

      Label write_speed {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }

    Box {
      layout {
        column: '1';
        row: '1';
      }

      orientation: vertical;
      spacing: 3;
      width-request: 100;
      margin-top: 7;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Total Read");
      }

      Label total_read {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }

    Box {
      layout {
        column: '3';
        row: '1';
      }

      orientation: vertical;
      spacing: 3;
      width-request: 100;
      margin-top: 7;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Total Written");
      }

      Label total_write {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }

    Box {
      layout {
        column: '1';
        row: '2';
      }

      orientation: vertical;
      spacing: 3;
      width-request: 100;
      margin-top: 7;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Active time");
      }

      Label active_time {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }

    Box {
      layout {
        column: '3';
        row: '2';
      }

      orientation: vertical;
      spacing: 3;
      width-request: 100;
      margin-top: 7;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Avg. response time");
      }

      Label avg_response_time {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }

    Label {
      layout {
        column: '1';
        row: '3';
      }

      margin-top: 20;

      styles [
        "caption",
      ]

      halign: start;
      label: _("Capacity:");
    }

    Label {
      layout {
        column: '1';
        row: '4';
      }

       styles [
        "caption",
      ]

      halign: start;
      label: _("Formatted:");
   }

    Label {
      layout {
        column: '1';
        row: '5';
      }

      styles [
        "caption",
      ]

      halign: start;
      label: _("System disk:");
    }

    Label {
      layout {
        column: '1';
        row: '6';
      }

      styles [
        "caption",
      ]

      halign: start;
      label: _("Type:");
    }

    Label {
      visible: bind template.wwn_visible;

      layout {
        column: '1';
        row: '7';
      }

      styles [
        "caption",
      ]

      halign: start;
      label: _("WWN:");
    }

    Label {
      visible: bind template.serial_number_visible;

      layout {
        column: '1';
        row: '8';
      }

      styles [
        "caption",
      ]

      halign: start;
      label: _("Serial:");
    }

    Label {
      visible: bind template.rotation_visible;

      layout {
        column: '1';
         row: '9';
      }

      styles [
        "caption",
      ]

      halign: start;
      label: _("Rotation Rate");
    }

    Label capacity {
      layout {
        column: '3';
        row: '3';
      }

      styles [
        "caption",
      ]

      halign: start;
      margin-top: 20;
    }

    Label formatted {
      layout {
        column: '3';
        row: '4';
      }

      styles [
        "caption",
      ]

      halign: start;
    }

    Label system_disk {
      layout {
        column: '3';
        row: '5';
      }

      styles [
        "caption",
      ]

      halign: start;
    }

    Label disk_type {
      layout {
        column: '3';
        row: '6';
      }

      styles [
        "caption",
      ]

      halign: start;
    }

    Label wwn {
      visible: bind template.wwn_visible;

      layout {
        column: '3';
        row: '7';
      }

      styles [
        "caption",
      ]

      halign: start;
      ellipsize: middle;
      selectable: true;
    }

    Label serial_number {
      visible: bind template.serial_number_visible;

      layout {
        column: '3';
        row: '8';
      }

      styles [
        "caption",
      ]

      halign: start;
      ellipsize: middle;
      selectable: true;
    }

    Label rotation_rate {
      visible: bind template.rotation_visible;

      layout {
        column: '3';
         row: '9';
      }

      styles [
        "caption",
      ]

      halign: start;
    }
  }
}
