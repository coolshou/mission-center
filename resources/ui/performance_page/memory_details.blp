using Gtk 4.0;

Grid root {
  margin-top: 65;
  margin-bottom: 10;
  row-spacing: 5;
  column-spacing: 0;

  styles [
    "layout-grid"
  ]

  Picture legend_used {
    layout {
      column: '0';
      row: '0';
    }

    can-shrink: false;
    content-fit: scale_down;
  }

  Box {
    layout {
      column: '1';
      row: '0';
    }

    orientation: vertical;
    spacing: 3;

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("In use");
    }

    Label in_use {
      styles [
        "title-4",
      ]

      halign: start;
    }
  }

  Box {
    layout {
      column: '3';
      row: '0';
    }

    orientation: vertical;
    spacing: 3;

    width-request: 100;

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Available");
    }

    Label available {
      styles [
        "title-4",
      ]

      halign: start;
    }
  }

  Picture legend_commited {
    layout {
      column: '0';
      row: '1';
    }

    margin-top: 7;

    can-shrink: false;
    content-fit: scale_down;
  }

  Box {
    layout {
      column: '1';
      row: '1';
    }

    margin-top: 7;

    orientation: vertical;
    spacing: 3;

    Label {

      styles [
        "caption",
      ]

      halign: start;
      label: _("Committed");
    }

    Label committed {
      styles [
        "title-4",
      ]

    halign: start;
    }
  }

  Box {
    layout {
      column: '3';
      row: '1';
    }

    margin-top: 7;
    width-request: 100;

    orientation: vertical;
    spacing: 3;

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Cached");
    }

    Label cached {
      styles [
        "title-4",
      ]

      halign: start;
    }
  }

  Box {
    layout {
      column: '1';
      row: '2';
    }

    margin-top: 7;
    width-request: 100;

    orientation: vertical;
    spacing: 3;

    Label {
      styles [
        "caption",
      ]

      visible: bind swap_used.visible;
      halign: start;
      label: _("Swap used");
    }

    Label swap_used {
      styles [
        "title-4",
      ]

      halign: start;
    }
  }

  Box {
    layout {
      column: '3';
      row: '2';
    }

    margin-top: 7;
    width-request: 100;

    orientation: vertical;
    spacing: 3;

    Label {
      styles [
        "caption",
      ]

      visible: bind swap_available.visible;
      halign: start;
      label: _("Swap available");
    }

    Label swap_available {
      styles [
        "title-4",
      ]

      halign: start;
    }
  }

  Label {
    layout {
      column: '1';
      row: '3';
    }

    margin-top: 20;

    styles [
      "caption",
    ]

    halign: start;
    label: _("Speed:");
  }

  Label {
    layout {
      column: '1';
      row: '4';
    }

    styles [
      "caption",
    ]

    halign: start;
    label: _("Slots used:");
  }

  Label {
    layout {
      column: '1';
      row: '5';
    }

    styles [
      "caption",
    ]

    halign: start;
    label: _("Form factor:");
  }

  Label {
    layout {
      column: '1';
      row: '6';
    }

    styles [
      "caption",
    ]

    halign: start;
    label: _("Type:");
  }

  Label speed {
    layout {
      column: '3';
      row: '3';
    }

    styles [
      "caption",
    ]

    halign: start;
    margin-top: 20;
  }

  Label slots_used {
    layout {
      column: '3';
      row: '4';
    }

    styles [
      "caption",
    ]

    halign: start;
  }

  Label form_factor {
    layout {
      column: '3';
      row: '5';
    }

    styles [
      "caption",
    ]

    halign: start;
  }

  Label ram_type {
    layout {
      column: '3';
      row: '6';
    }

    styles [
      "caption",
    ]

    halign: start;
  }
}
