using Gtk 4.0;

Box root {
  margin-top: 65;
  margin-bottom: 10;
  orientation: vertical;
  spacing: 20;

  Box dynamic_data {
    orientation: vertical;
    spacing: 10;

    Box top_row {
      spacing: 15;

      Box {
        orientation: horizontal;
        spacing: 5;

        width-request: 100;

        Picture legend_used {
          can-shrink: false;
          content-fit: scale_down;
        }

        Box {
          orientation: vertical;
            spacing: 3;

            Label {
            styles [
            "caption",
            ]

            halign: start;
            label: _("In use");
          }

          Label in_use {
          styles [
          "title-4",
          ]

          halign: start;
          }
        }
      }

      Box {
        orientation: vertical;
        spacing: 3;

        width-request: 100;

        Label {
          styles [
            "caption",
          ]

          halign: start;
          label: _("Available");
        }

        Label available {
          styles [
            "title-4",
          ]

          halign: start;
        }
      }
    }

    Box mid_row {
      spacing: 15;

      Box {
        orientation: horizontal;
        spacing: 5;

        width-request: 100;

        Picture legend_commited {
          can-shrink: false;
          content-fit: scale_down;
        }

        Box {
          orientation: vertical;
          spacing: 3;
          Label {

            styles [
              "caption",
            ]

            halign: start;
            label: _("Committed");
          }

          Label committed {
            styles [
              "title-4",
            ]

          halign: start;
          }
        }
      }

      Box {
        orientation: vertical;
        spacing: 3;
        width-request: 100;

        Label {
          styles [
            "caption",
          ]

          halign: start;
          label: _("Cached");
        }

        Label cached {
          styles [
            "title-4",
          ]

          halign: start;
        }
      }
    }

    Box bottom_row {
      spacing: 15;


      Box {
        orientation: vertical;
        spacing: 3;
        width-request: 100;

        Label {
          styles [
            "caption",
          ]

          halign: start;
          label: _("Swap used");
        }

        Label swap_used {
          styles [
            "title-4",
          ]

          halign: start;
        }
      }

      Box {
        orientation: vertical;
        spacing: 3;
        width-request: 100;

        Label {
          styles [
            "caption",
          ]

          halign: start;
          label: _("Swap available");
        }

        Label swap_available {
          styles [
            "title-4",
          ]

          halign: start;
        }
      }
    }
  }

  Grid system_info {
    row-spacing: 5;
    column-spacing: 10;

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Speed:");

      layout {
        column: '0';
        row: '0';
      }
    }

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Slots used:");

      layout {
        column: '0';
        row: '1';
      }
    }

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Form factor:");

      layout {
        column: '0';
        row: '2';
      }
    }

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Type:");

      layout {
        column: '0';
        row: '3';
      }
    }

    Label speed {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '0';
      }
    }

    Label slots_used {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '1';
      }
    }

    Label form_factor {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '2';
      }
    }

    Label ram_type {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '3';
      }
    }
  }
}
