using Gtk 4.0;

template $PerformancePageDisk: Box {
  orientation: vertical;
  margin-bottom: 10;

  WindowHandle {
    child: Box description {
      orientation: vertical;
      spacing: 7;
      hexpand: true;

      Box {
        spacing: 20;

        Box {
          spacing: 5;

          hexpand: true;
          halign: start;

          Label disk_id {
            styles [
              "title-1",
            ]

            hexpand: true;
            halign: start;
            ellipsize: middle;
          }

          Box {
            orientation: horizontal;
            homogeneous: true;
            halign: start;

            Button button_smart {
              styles [
                "flat"
              ]

              visible: false;

              icon-name: 'info-symbolic';
              tooltip-text: _("Show SMART Data");
            }

            Button button_eject {
              styles [
                "flat"
              ]

              visible: false;

              icon-name: 'media-eject-symbolic';
              tooltip-text: _("Eject Disk");
            }
          }
        }

        Label model {
          styles [
            "title-3",
          ]

          halign: end;
          ellipsize: middle;
        }
      }

      Box {
        Label {
          styles [
            "caption",
          ]

          halign: start;
          label: _("Active time over ");
        }
        Label graph_max_duration {
          styles [
            "caption",
          ]

          hexpand: true;
          halign: start;
        }

        Label {
          styles [
            "caption",
          ]

          label: "100%";
        }
      }
    };
  }

  $GraphWidget usage_graph {
    vexpand: true;
    hexpand: true;

    width-request: 100;
    height-request: 50;

    base-color: bind template.base-color;
    data-set-count: 1;
    scroll: true;
  }

  Box {
    margin-top: 10;

    Label {
      styles [
        "caption",
      ]
      label: _("Throughput over ");
    }

    Label {
      styles [
        "caption",
      ]

      hexpand: true;
      halign: start;
      label: bind graph_max_duration.label;
    }

    Label max_y {
      styles [
        "caption",
      ]
    }
  }

  $GraphWidget disk_transfer_rate_graph {
    vexpand: true;
    hexpand: true;

    width-request: 100;
    height-request: 50;

    base-color: bind template.base-color;
    data-set-count: 2;
    scroll: true;
    scaling: 2;
  }

  PopoverMenu context_menu {
    has-arrow: false;
    menu-model: context_menu_model;
  }
}

menu context_menu_model {
  section {
    item {
      label: _("Graph _Summary View");
      action: "graph.summary";
    }

    submenu {
      label: _("_View");

      item {
        label: _("CP_U");
        action: "graph.cpu";
      }

      item {
        label: _("_Memory");
        action: "graph.memory";
      }

      item {
        label: _("_Drive");
        action: "graph.disk";
      }

      item {
        label: _("_Network");
        action: "graph.network";
      }

      item {
        label: _("_GPU");
        action: "graph.gpu";
      }

      item {
        label: _("_Fan");
        action: "graph.fan";
      }
    }
  }

  section {
    item {
      label: _("_Copy");
      action: "graph.copy";
    }
  }
}
