using Gtk 4.0;

Box root {
  margin-top: 65;
  margin-bottom: 10;
  orientation: vertical;
  spacing: 25;

  Grid {
    row-spacing: 5;
    column-spacing: 0;

    styles [
      "layout-grid"
    ]

    Picture legend_recv {
      layout {
        column: '0';
        row: '0';
      }

      can-shrink: false;
      content-fit: scale_down;
    }

    Box {
      layout {
        column: '1';
        row: '0';
      }

      orientation: vertical;
      spacing: 3;
      width-request: 100;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Receive");
      }

      Label speed_recv {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }

    Picture legend_send {
      layout {
        column: '2';
        row: '0';
      }

      can-shrink: false;
      content-fit: scale_down;
    }

    Box {
      layout {
        column: '3';
        row: '0';
      }

      orientation: vertical;
      spacing: 3;
      width-request: 100;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Send");
      }

      Label speed_send {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }

    Box {
      layout {
        column: '1';
        row: '1';
      }

      orientation: vertical;
      spacing: 3;
      width-request: 100;
      margin-top: 7;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Total Received");
      }

      Label total_recv {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }

    Box {
      layout {
        column: '3';
        row: '1';
      }

      orientation: vertical;
      spacing: 3;
      width-request: 100;
      margin-top: 7;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Total Sent");
      }

      Label total_sent {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }

    Label {
      layout {
        column: '1';
        row: '2';
      }

      styles [
        "caption",
      ]

      margin-top: 20;

      halign: start;
      label: _("Interface name:");
    }

    Label {
      layout {
        column: '1';
        row: '3';
      }

      styles [
        "caption",
      ]

      halign: start;
      label: _("Connection type:");
    }

    Label {
      layout {
        column: '1';
        row: '4';
      }

      styles [
        "caption",
      ]

      halign: start;
      label: _("Connection status:");
    }

    Label {
      layout {
        column: '1';
        row: '5';
      }

      styles [
        "caption",
      ]

      halign: start;
      visible: bind ssid.visible;
      label: _("SSID:");
    }

    Label {
      layout {
        column: '1';
        row: '6';
      }

      styles [
        "caption",
      ]

      halign: start;
      visible: bind signal_strength.visible;
      label: _("Signal strength:");
    }

    Label {
      layout {
        column: '1';
        row: '7';
      }

      styles [
        "caption",
      ]

      halign: start;
      visible: bind max_bitrate.visible;
      label: _("Maximum Bitrate:");
    }

    Label {
      layout {
        column: '1';
        row: '8';
      }

      styles [
        "caption",
      ]

      halign: start;
      visible: bind frequency.visible;
      label: _("Frequency:");
    }

    Label {
      layout {
        column: '1';
        row: '9';
      }

      styles [
        "caption",
      ]

      halign: start;
      label: _("Hardware address:");

      ellipsize: middle;
    }

    Label interface_name_label {
      layout {
        column: '3';
        row: '2';
      }

      styles [
        "caption",
      ]

      halign: start;
      margin-top: 20;

      selectable: true;
    }

    Label connection_type_label {
      layout {
        column: '3';
        row: '3';
      }

      styles [
        "caption",
      ]

      halign: start;

      selectable: true;
    }

    Label connection_status_label {
      layout {
        column: '3';
        row: '4';
      }

      styles [
        "caption",
      ]

      halign: start;

      selectable: true;
    }

    Label ssid {
      layout {
        column: '3';
        row: '5';
      }

      styles [
        "caption",
      ]

      halign: start;
      visible: false;

      selectable: true;
    }

    Image signal_strength {
      layout {
        column: '3';
        row: '6';
      }

      styles [
        "caption",
      ]

      halign: start;
      visible: false;
    }

    Label max_bitrate {
      layout {
        column: '3';
        row: '7';
      }

      styles [
        "caption",
      ]

      halign: start;
      visible: false;

      selectable: true;
    }

    Label frequency {
      layout {
        column: '3';
        row: '8';
      }

      styles [
        "caption",
      ]

      halign: start;
      visible: false;

      selectable: true;
    }

    Label hw_address {
      layout {
        column: '3';
        row: '9';
      }

      styles [
        "caption",
      ]

      halign: start;

      selectable: true;
    }
  }

  Box {
    orientation: vertical;
    spacing: 5;
    margin-start: 10;

    Box {
      orientation: horizontal;
      spacing: 2;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("IPv4 address:");

        ellipsize: end;
      }

      Label ipv4_address {
        styles [
          "caption",
        ]

        halign: start;

        selectable: true;
      }
    }

    Box {
      orientation: horizontal;
      spacing: 2;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("IPv6 address:");

        ellipsize: end;
      }

      Label ipv6_address {
        styles [
          "caption",
        ]

        halign: start;

        ellipsize: middle;
        selectable: true;
      }
    }
  }
}
