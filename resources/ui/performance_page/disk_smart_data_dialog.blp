using Gtk 4.0;
using Adw 1;

template $SmartDataDialog: Adw.Dialog {
  Adw.ToolbarView {
    [top]
    Adw.HeaderBar {
      title-widget: Label {
        styles [
          "heading"
        ]

        label: _("Smart Data");
      };
    }

    Box {
      margin-start: 15;
      margin-end: 15;
      margin-top: 15;
      margin-bottom: 15;
      spacing: 15;

      orientation: vertical;

      Grid common_data {
        Label {
          label: _("Last Updated");
          halign: end;
          margin-start: 15;
          margin-end: 15;
          margin-top: 5;
          margin-bottom: 5;

          layout {
            column: '0';
            row: '0';
          }
        }

        Label last_updated {
          hexpand: true;
          halign: start;

          layout {
            column: '1';
            row: '0';
          }
        }

        Label {
          label: _("Powered On");
          halign: end;
          margin-start: 15;
          margin-end: 15;
          margin-top: 5;
          margin-bottom: 5;

          layout {
            column: '0';
            row: '1';
          }
        }

        Label powered_on {
          hexpand: true;
          halign: start;

          layout {
            column: '1';
            row: '1';
          }
        }

        Label {
          label: _("Drive Health");
          halign: end;
          margin-start: 15;
          margin-end: 15;
          margin-top: 5;
          margin-bottom: 5;

          layout {
            column: '2';
            row: '0';
          }
        }

        Label health {
          hexpand: true;
          halign: start;

          layout {
            column: '3';
            row: '0';
          }
        }

        Label {
          label: _("SMART Test Status");
          halign: end;
          margin-start: 15;
          margin-end: 15;
          margin-top: 5;
          margin-bottom: 5;

          layout {
            column: '2';
            row: '1';
          }
        }

        Label status {
          hexpand: true;
          halign: start;

          layout {
            column: '3';
            row: '1';
          }
        }
      }

      ScrolledWindow nvme_data {
        hscrollbar-policy: never;
        propagate-natural-height: true;

        ColumnView nvme_column_view {
          ColumnViewColumn nvme_name_column {
            title: _("Attribute");

            factory: SignalListItemFactory {};
          }

          ColumnViewColumn nvme_value_column {
            title: _("Value");

            factory: SignalListItemFactory {};
          }
        }
      }

      ScrolledWindow sata_data {
        hscrollbar-policy: never;
        propagate-natural-height: true;

        ColumnView sata_column_view {
          ColumnViewColumn sata_id_column {
            title: _("ID");

            factory: SignalListItemFactory {};
          }

          ColumnViewColumn sata_attribute_column {
            title: _("Attribute");

            factory: SignalListItemFactory {};
          }

          ColumnViewColumn sata_value_column {
            title: _("Value");

            factory: SignalListItemFactory {};
          }

          ColumnViewColumn sata_normalized_column {
            title: _("Normalized");

            factory: SignalListItemFactory {};
          }

          ColumnViewColumn sata_threshold_column {
            title: _("Threshold");

            factory: SignalListItemFactory {};
          }

          ColumnViewColumn sata_worst_column {
            title: _("Worst");

            factory: SignalListItemFactory {};
          }

          ColumnViewColumn sata_type_column {
            title: _("Type");

            factory: SignalListItemFactory {};
          }

          ColumnViewColumn sata_updates_column {
            title: _("Updates");

            factory: SignalListItemFactory {};
          }

          ColumnViewColumn sata_assessment_column {
            title: _("Assessment");

            factory: SignalListItemFactory {};
          }
        }
      }
    }
  }
}
