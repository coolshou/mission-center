using Gtk 4.0;

Grid root {
  margin-top: 65;
  margin-bottom: 10;
  orientation: vertical;

  row-spacing: 5;
  column-spacing: 0;

  styles [
    "layout-grid"
  ]

  Picture legend_speed {
    layout {
      column: '0';
      row: '0';
    }

    can-shrink: false;
    content-fit: scale_down;
  }

  Box {
    layout {
      column: '1';
      row: '0';
    }

    orientation: vertical;
    spacing: 3;

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Fan Speed");
    }

    Label speed {
      styles [
        "title-4",
      ]

      halign: start;
    }
  }

  Picture legend_pwm {
    layout {
      column: '0';
      row: '1';
    }

    visible: bind box_pwm.visible;

    can-shrink: false;
    content-fit: scale_down;
  }

  Box box_pwm {
    layout {
      column: '1';
      row: '1';
    }

    orientation: vertical;
    spacing: 3;

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("PWM Percentage");
    }

    Label pwm {
      styles [
        "title-4",
      ]

      halign: start;
    }
  }

  Box box_temp {
    layout {
      column: '1';
      row: '2';
    }

    orientation: vertical;
    spacing: 3;

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Current Temperature");
    }

    Label temp {
      styles [
        "title-4",
      ]

      halign: start;
    }
  }
}
