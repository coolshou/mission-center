using Gtk 4.0;

Box root {
  margin-top: 65;
  margin-bottom: 10;
  orientation: vertical;
  spacing: 20;

  Box dynamic_data {
    orientation: vertical;
    spacing: 10;

    Box top_row {
      spacing: 15;

      Box {
        orientation: vertical;
        spacing: 3;

        Label {
          styles [
            "caption",
          ]

          halign: start;
          label: _("Utilization");
        }

        Label utilization {
          styles [
            "title-4",
          ]

          halign: start;
        }
      }

      Box {
        orientation: vertical;
        spacing: 3;

        Label {
          styles [
            "caption",
          ]

          halign: start;
          label: _("Speed");
        }

        Label speed {
          styles [
            "title-4",
          ]

          halign: start;
        }
      }
    }

    Box mid_row {
      spacing: 15;
      width-request: 200;

      Box {
        orientation: vertical;
        spacing: 3;

        Label {
          styles [
            "caption",
          ]

          halign: start;
          label: _("Processes");
        }

        Label processes {
          styles [
            "title-4",
          ]

          halign: start;
        }
      }

      Box {
        orientation: vertical;
        spacing: 3;

        Label {
          styles [
            "caption",
          ]

          halign: start;
          label: _("Threads");
        }

        Label threads {
          styles [
            "title-4",
          ]

          halign: start;
        }
      }

      Box {
        orientation: vertical;
        spacing: 3;

        Label {
          styles [
            "caption",
          ]

          halign: start;
          label: _("Handles");
        }

        Label handles {
          styles [
            "title-4",
          ]

          halign: start;
        }
      }
    }

    Box {
      orientation: vertical;
      spacing: 3;

      Label {
        styles [
          "caption",
        ]

        halign: start;
        label: _("Up time");
      }

      Label uptime {
        styles [
          "title-4",
        ]

        halign: start;
      }
    }
  }

  Grid system_info {
    row-spacing: 5;
    column-spacing: 10;

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Base Speed:");

      layout {
        column: '0';
        row: '0';
      }
    }

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Sockets:");

      layout {
        column: '0';
        row: '1';
      }
    }

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Virtual processors:");

      layout {
        column: '0';
        row: '2';
      }
    }

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Virtualization:");

      layout {
        column: '0';
        row: '3';
      }
    }

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("Virtual machine:");

      layout {
        column: '0';
        row: '4';
      }
    }

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("L1 cache:");

      layout {
        column: '0';
        row: '5';
      }
    }

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("L2 cache:");

      layout {
        column: '0';
        row: '6';
      }
    }

    Label {
      styles [
        "caption",
      ]

      halign: start;
      label: _("L3 cache:");

      layout {
        column: '0';
        row: '7';
      }
    }

    Label base_speed {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '0';
      }
    }

    Label sockets {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '1';
      }
    }

    Label virt_proc {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '2';
      }
    }

    Label virtualization {
      styles [
        "caption",
      ]

      halign: start;
      label: "Unknown";

      layout {
        column: '1';
        row: '3';
      }
    }

    Label virt_machine {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '4';
      }
    }

    Label l1_cache {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '5';
      }
    }

    Label l2_cache {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '6';
      }
    }

    Label l3_cache {
      styles [
        "caption",
      ]

      halign: start;

      layout {
        column: '1';
        row: '7';
      }
    }
  }
}
