using Gtk 4.0;
using Adw 1;

template $ServicesPage : Box {
  orientation: vertical;

  Adw.Clamp {
    margin-start: 20;
    margin-end: 20;
    margin-top: 20;
    margin-bottom: 20;

    maximum-size: 3000;

    child: Box {
      orientation: vertical;

      Box top_legend {
        margin-bottom: 20;

        Box {
          valign: center;
          spacing: 5;

          Adw.ToggleGroup service_legend {
            orientation: horizontal;
            homogeneous: true;

            Adw.Toggle total_service_box {
              enabled: true;
            }

            Adw.Toggle running_service_box {
              icon-name: "service-running";
            }

            Adw.Toggle failed_service_box {
              icon-name: "service-failed";
            }

            Adw.Toggle stopped_service_box {
              icon-name: "service-stopped";
            }

            Adw.Toggle disabled_service_box {
              icon-name: "service-disabled";
            }
          }

          Box {
            hexpand: true;
          }
        }

        Box {
          valign: end;
          spacing: 5;

          Button {
            margin-end: 5;

            action-name: "apps-page.collapse-all";
            tooltip-text: _("Collapse all apps and processes");

            child: Box {
              spacing: 5;

              halign: center;

              Image {
                icon-name: "list-collapse-symbolic";
              }

              Label collapse_label {
                label: _("Collapse All");
              }
            };
          }

          $ProcessActionBar process_action_bar {

          }

          $ServiceActionBar service_action_bar {

          }
        }
      }

      $ColumnViewFrame column_view {}
    };
  }
}
