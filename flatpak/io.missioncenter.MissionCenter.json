{
  "app-id": "io.missioncenter.MissionCenter",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "missioncenter",
  "build-options": {
    "no-debuginfo": true,
    "append-path": "/app/rust-toolchain-glibc/cargo/bin",
    "env": {
      "RUSTUP_HOME": "/app/rust-toolchain-glibc/rustup",
      "RUST_BACKTRACE": "full"
    }
  },
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=shm",
    "--device=all",
    "--socket=wayland",
    "--talk-name=org.freedesktop.Flatpak",
    "--talk-name=org.gnome.Settings",
    "--system-talk-name=org.freedesktop.systemd1",
    "--system-talk-name=org.freedesktop.NetworkManager",
    "--filesystem=xdg-data/flatpak/exports/share:ro",
    "--filesystem=/var/lib/flatpak/exports/share:ro",
    "--filesystem=xdg-data/flatpak/app:ro",
    "--filesystem=/var/lib/flatpak/app:ro",
    "--filesystem=/snap:ro",
    "--filesystem=/var/lib/snapd:ro",
    "--env=XDG_DATA_DIRS=/app/share:/usr/share:/usr/share/runtime/share:/run/host/user-share:/run/host/share:/var/lib/flatpak/exports/share:/var/lib/snapd/desktop:~/.local/share/flatpak/exports/share",
    "--env=LD_PRELOAD="
  ],
  "cleanup": [
    "/sbin",
    "/etc",
    "/sbin",
    "/include",
    "/lib/pkgconfig",
    "/lib/python*",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "build-tools",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir rootfs-glibc && cd rootfs-glibc && tar xf ../ubuntu-14.04-*.tar.zst && rm ../ubuntu-14.04-*.tar.zst",
        "cp -a clang rootfs-glibc/usr/bin",
        "cp -a ar rootfs-glibc/usr/bin",
        "",
        "mkdir rootfs-musl&& cd rootfs-musl && tar xf ../alpine-3.9-*.tar.zst && rm ../alpine-3.9-*.tar.zst",
        "cp -a clang rootfs-musl/usr/bin",
        "cp -a ar rootfs-musl/usr/bin",
        "ln -sf libgbm.so.1 rootfs-musl/usr/lib/libgcc_s.so",
        "",
        "mv * /app/"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://missioncenter.io/build-tools/ubuntu-14.04-x86_64_r5.tar.zst",
          "sha256": "224334263fdd101ef1435ef3a33889160184fa10493e65f7ec1f97ba0632949f",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "file",
          "url": "https://missioncenter.io/build-tools/alpine-3.9-x86_64_r3.tar.zst",
          "sha256": "05dc16d84833bdedd8df3dc6d395c2b0510161087ddae614f9a4d8a315bf36ae",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/rust-toolchain-glibc-1.84.1-x86_64.tar.zst",
          "dest": "rust-toolchain-glibc",
          "sha256": "c88e9461ec1698538d2fbeceb1fa66a7c80d270c0d59950d16a20ef6dc098303",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/rust-toolchain-musl-1.84.1-x86_64.tar.zst",
          "dest": "rust-toolchain-musl",
          "sha256": "8cf93ecaf142ff8a3778fc8d288333d4bd2c808afa0e6e34bf47e2d70f545516",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "archive",
          "url": "https://ziglang.org/download/0.12.1/zig-linux-x86_64-0.12.1.tar.xz",
          "dest": "zig",
          "sha256": "8860fc9725c2d9297a63008f853e9b11e3c5a2441217f99c1e3104cc6fa4a443",
          "only-arches": [
            "x86_64"
          ]
        },
        {
          "type": "file",
          "url": "https://missioncenter.io/build-tools/ubuntu-14.04-aarch64_r5.tar.zst",
          "sha256": "68dbbf9ba6f1e4ce3781082f798ca075900899097ef0d1b2e5571a9e509c62f8",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "file",
          "url": "https://missioncenter.io/build-tools/alpine-3.9-aarch64_r3.tar.zst",
          "sha256": "8160382fed9d22e468a618f82537b1a1aab5ce5005121f660012e66e70e98f2d",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/rust-toolchain-glibc-1.84.1-aarch64.tar.zst",
          "dest": "rust-toolchain-glibc",
          "sha256": "7163f6c75deac4e7956c095b727de244bede5b5d201c289a9fe93be8a1d2e06f",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "archive",
          "url": "https://missioncenter.io/build-tools/rust-toolchain-musl-1.84.1-aarch64.tar.zst",
          "dest": "rust-toolchain-musl",
          "sha256": "d985d1f077fcdd41a636a0f143725a0ba52b95e7ad70f7e53fe5c46fb69082f5",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "archive",
          "url": "https://ziglang.org/download/0.12.1/zig-linux-aarch64-0.12.1.tar.xz",
          "dest": "zig",
          "sha256": "27d4fef393e8d8b5f3b1d19f4dd43bfdb469b4ed17bbc4c2283c1b1fe650ef7f",
          "only-arches": [
            "aarch64"
          ]
        },
        {
          "type": "file",
          "path": "../support/clang"
        },
        {
          "type": "file",
          "path": "../support/ar"
        }
      ],
      "cleanup": [
        "*"
      ]
    },
    {
      "name": "blueprint-compiler",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler/-/archive/v0.16.0/blueprint-compiler-v0.16.0.tar.bz2",
          "sha256": "77a5d593f433c8ca70a05390532cd186c60944cfa6bcd39296c1c2597a7a50fc"
        }
      ],
      "cleanup": [
        "*"
      ]
    },
    {
      "name": "missioncenter",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "-Dbuildtype=release",
        "-Db_lto=true",
        "-Dflatpak=true",
        "-Dcargo_env='CARGO_HOME=/run/build/missioncenter/cargo'"
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        },
        {
          "type": "inline",
          "contents": "[source.vendored-sources]\ndirectory = \"cargo/vendor\"\n\n[source.crates-io]\nreplace-with = \"vendored-sources\"\n",
          "dest": ".cargo",
          "dest-filename": "config.toml"
        },
        "cargo-sources.json"
      ],
      "modules": [
        {
          "name": "magpie",
          "buildsystem": "simple",
          "build-options": {
            "env": {
              "PROOT_NO_SECCOMP": "1",
              "CARGO_HOME": "/run/build/magpie/cargo",
              "CC": "clang"
            }
          },
          "build-commands": [
            "mkdir -p subprojects/magpie/target/release/build/native && cp -ar nvtop-* subprojects/magpie/target/release/build/native/",
            "/app/bin/proot -b /app/rust-toolchain-glibc:/app/rust-toolchain-glibc -b /app/zig:/app/zig -b $PWD:/build-dir -R /app/rootfs-glibc /bin/sh -c 'cd /build-dir/subprojects/magpie && env PATH=/app/rust-toolchain-glibc/cargo/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin env RUSTUP_HOME=/app/rust-toolchain-glibc/rustup cargo build --offline --release --features=skip-codegen'",
            "install -v -p -m 755 subprojects/magpie/target/release/gatherer /app/bin/missioncenter-gatherer-glibc",
            "",
            "rm -rf subprojects/magpie/target",
            "",
            "mkdir -p subprojects/magpie/target/release/build/native && mv nvtop-* subprojects/magpie/target/release/build/native/",
            "/app/bin/proot -b /app/rust-toolchain-musl:/app/rust-toolchain-musl -b /app/zig:/app/zig -b $PWD:/build-dir -R /app/rootfs-musl /bin/sh -c 'cd /build-dir/subprojects/magpie && env PATH=/app/rust-toolchain-musl/cargo/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin env RUSTUP_HOME=/app/rust-toolchain-musl/rustup cargo build --offline --release --features=skip-codegen''",
            "install -v -p -m 755 subprojects/magpie/target/release/gatherer /app/bin/missioncenter-gatherer-musl"
          ],
          "sources": [
            {
              "type": "dir",
              "path": ".."
            },
            {
              "type": "archive",
              "url": "https://github.com/Syllo/nvtop/archive/19382d93086acf36f32a8d72173fb9968232e3c1.tar.gz",
              "sha256": "73acacb17f1e142b1e6a2eb79eada5c1735c72ed57bdfe2c4e43c59600558679",
              "dest": "nvtop-19382d93086acf36f32a8d72173fb9968232e3c1"
            },
            {
              "type": "shell",
              "commands": [
                "cd nvtop-* && find ../subprojects/magpie/platform-linux/3rdparty/nvtop/patches -type f -iname \"*.patch\" -exec sh -c 'patch -p1 < {}' \\;"
              ]
            },
            {
              "type": "inline",
              "contents": "[source.vendored-sources]\ndirectory = \"../../cargo/vendor\"\n\n[source.crates-io]\nreplace-with = \"vendored-sources\"\n\n[target.x86_64-unknown-linux-musl]\nrustflags = [ '-C', 'target-feature=-crt-static', '-C', 'link-args=-lunwind' ]\n\n[target.aarch64-unknown-linux-musl]\nrustflags = [ '-C', 'target-feature=-crt-static', '-C', 'link-args=-lunwind' ]\n",
              "dest": "subprojects/magpie/.cargo",
              "dest-filename": "config.toml"
            },
            "cargo-sources-magpie.json"
          ],
          "modules": [
            {
              "name": "proot",
              "buildsystem": "simple",
              "build-commands": [
                "make -C src loader.elf build.h",
                "make -C src proot",
                "install -v -p -m 755 src/proot /app/bin/proot"
              ],
              "sources": [
                {
                  "type": "git",
                  "url": "https://github.com/proot-me/proot.git",
                  "tag": "v5.4.0",
                  "commit": "bd5a5f63d72f8210d8cee76195eb9f0749e5bd70"
                }
              ],
              "modules": [
                {
                  "name": "libarchive",
                  "buildsystem": "autotools",
                  "config-opts": [
                    "--disable-bsdcat",
                    "--disable-bsdcpio",
                    "--disable-bsdtar"
                  ],
                  "sources": [
                    {
                      "type": "archive",
                      "url": "https://libarchive.org/downloads/libarchive-3.6.2.tar.xz",
                      "sha256": "9e2c1b80d5fbe59b61308fdfab6c79b5021d7ff4ff2489fb12daf0a96a83551d"
                    }
                  ],
                  "cleanup": [
                    "*"
                  ]
                },
                {
                  "name": "libtalloc",
                  "buildsystem": "autotools",
                  "sources": [
                    {
                      "type": "archive",
                      "url": "https://www.samba.org/ftp/talloc/talloc-2.4.1.tar.gz",
                      "sha256": "410a547f08557007be0e88194f218868358edc0ab98c98ba8c167930db3d33f9"
                    }
                  ],
                  "cleanup": [
                    "*"
                  ]
                }
              ],
              "cleanup": [
                "*"
              ]
            }
          ]
        }
      ]
    }
  ]
}
